#include <iostream>
#include <cstdio>

typedef long long int ll;
#define INF 2000000000

using namespace std;

int main()
{
    int t;
    scanf("%d",&t);
    while(t--)
    {
        int h,res;
        int dp[25][25]={{0}};
        res=INF;
        scanf("%d",&h);
        for(int i=1;i<=h;i++)
            for(int j=1;j<=3;j++)
                scanf("%d",&dp[i][j]);
        for(int i=1;i<=h;i++)
            for(int j=1;j<=3;j++)
                dp[i][j]=min((j==1?INF:dp[i-1][j-1]),(j==3?INF:dp[i-1][j+1]))+dp[i][j];

        for(int i=1;i<=3;i++)
            res=min(dp[h][i],res);
        printf("%d\n",res);
    }
    return 0;
}
